<div class="flip flip-vertical">
  <div class="front">
    <img src="{{image}}" alt="{{title}}" />
    <h1 class="text-shadow">Keyword: {{keyword}}</h1>
  </div>
  <div class="back">
    <h2>{{title}}</h2>
    <p>Description: {{description}}</p>
    <a href="/post/details/{{_id}}" class="details">Details</a>
  </div>
</div>