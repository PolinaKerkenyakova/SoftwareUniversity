<main>
  <section id="edit-page">
    <div class="edit-container">
      <div class="box-image">

      </div>
      <h2 class="box-heading">
        Edit Home
      </h2>

      <form class="form" action="/housing/edit/{{houdingData._id}}" method="POST">
        <div class="input">
          <input
            type="text"
            class="input-field"
            id="home-name"
            name="name"
            value="{{housingData.name}}"
          />
          <label class="home-name">Name:</label>
        </div>
        <div class="input">
          <input type="text" class="input-field" id="type" name="type" value="{{housingData.type}}" />
          <label class="type">Property Type:</label>
        </div>
        <div class="input">
          <input type="number" class="input-field" id="year" name="year" value="{{housingData.year}}" />
          <label class="year">Year Built:</label>
        </div>
        <div class="input">
          <input type="text" class="input-field" id="city" name="city" value="{{housingData.city}}" />
          <label class="city">City</label>
        </div>

        <div class="input">
          <input
            type="text"
            class="input-field"
            id="homeImage"
            name="homeImage"
            value="{{housingData.homeImage}}"
          />
          <label class="homeImage">Home Image:</label>
        </div>

        <div class="input">
          <input
            type="text"
            class="input-field"
            id="description"
            name="description"
            value="{{housingData.description}}"
          />
          <label class="description">Property Description:</label>
        </div>

        <div class="input">
          <input
            type="number"
            class="input-field"
            id="availablePieces"
            name="availablePieces"
            value="{{housingData.availablePieces}}"
          />
          <label class="availablePieces">Available pieces:</label>
        </div>

        <div class="create-action">
          <button class="create-button">Edit</button>
        </div>
      </form>
    </div>
  </section>

</main>